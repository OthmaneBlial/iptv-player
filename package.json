{
  "name": "iptv-player",
  "version": "1.0.0",
  "description": "A modern IPTV Player built with TypeScript, Sass, HLS.js, Babel, and Webpack.",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack serve --mode development --open",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss,html}'"
  },
  "keywords": [
    "IPTV",
    "Player",
    "TypeScript",
    "Sass",
    "Webpack",
    "HLS.js"
  ],
  "author": "Othmane BLIAL",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@types/jest": "^29.5.13",
    "babel-loader": "^9.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.13.0",
    "html-webpack-plugin": "^5.6.2",
    "jest": "^29.7.0",
    "sass": "^1.80.3",
    "sass-loader": "^16.0.2",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
